{# app/Resources/views/base.html.twig #}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}Book Review{% endblock %} - Book Review</title>
    {% block stylesheets %}
        {% stylesheets
        'https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'
        '../app/Resources/public/css/screen.css'

        %}
        <link href="{{ asset_url }} " type="text/css" rel="stylesheet"/>
        {% endstylesheets %}
    {% endblock %}
    {% block javascript %}
        {% javascripts
        'https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js'
        '../app/Resources/public/css/main.js'
        %}
        <script type="text/javascript" src="{{ asset_url }} "></script>
        {% endjavascripts %}
    {% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('Books.ico') }} "/>

</head>
<body>
<div class="container">
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <button type="button" class="navbar-toggle collapsed"
                    data-toggle="collapse"
                    data-target="#bs-example-navbar-collapse-1">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="{{ path('index') }}">Book Review</a>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="{{ path('index') }}">Home</a></li>
                    <li><a href="{{ path('about') }}">About</a></li>
                    <li><a href="{{ path('api') }}">api</a></li>
                    <li><a href="{{ path('book_create') }}">Add Book</a></li>

                    <li><a href="{{ path('category_index') }}">Search By Category</a></li>

                    <li><a href="{{ path('Google_new') }}">Google Search</a></li>

                    {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                        <a class="link" href="{{ path('fos_user_security_logout') }}">Logout</a>
                    {% else %}
                        <a class="link" href="{{ path('fos_user_security_login') }}">Login</a>
                        <a class="link" href="{{ path('fos_user_registration_register') }}">signup</a>
                    {% endif %}
                   <b> {{ app.user.username|default('') }}</b>
                </ul>
            </div>
        </div>
    </nav>
    <div class="row">
        <section class="col-md-8">
            {% block body %}{% endblock %}
        </section>
        <section class="col-md-4">
      {% block sidebar %}

       {% endblock %}
   </section>
</div>
<div class="footer">
   {% block footer %}
       <p>Book Review</p>
   {% endblock %}
</div>
</div>
</body>
</html>
